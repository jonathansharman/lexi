<h1>{{ lexicon.format.foreign_native.title }}</h1>
{% for lexeme in lexicon.lexemes -%}
{%- if lexeme.definition %}
<div id="{{ lexeme.lemma }}">
	<b><a href="#{{ lexeme.lemma }}">
		{{- lexeme.lemma -}}
	</a></b>
	{{- lexicon.format.foreign_native.delimiter -}}
	{%- for gloss in lexeme.glosses -%}
		{{- gloss -}}
		{%- if not loop.last -%}
			{{- lexicon.format.foreign_native.gloss_delimiter -}}
		{%- endif -%}
	{%- endfor -%}
	{%- if lexeme.translation -%}
	<div style="margin-left:20px">
		{{- lexeme.translation -}}
	</div>
	{%- endif -%}
</div>
{% endif -%}
{%- endfor -%}
